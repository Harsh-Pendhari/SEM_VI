<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg"
    android:id="@+id/sos_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SOS IMAGE HEADER -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="420dp">

            <!-- BACKGROUND IMAGE -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sos_bg"
                android:scaleType="centerCrop" />

            <!-- CONTENT OVER IMAGE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TOP BAR -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:id="@+id/ivCloseSOS"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/cross_icon"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency SOS"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <!-- CENTER CONTENT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CALL EMERGENCY"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="150dp"/>

                    <!--                    <TextView-->
<!--                        android:id="@+id/tvCountdown"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="18dp"-->
<!--                        android:background="@drawable/bg_sos_countdown"-->
<!--                        android:paddingHorizontal="20dp"-->
<!--                        android:paddingVertical="10dp"-->
<!--                        android:text="Calling Emergency in 8 seconds"-->
<!--                        android:textColor="@android:color/white"-->
<!--                        android:textSize="14sp" />-->
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <!-- EMERGENCY CONTACTS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Contacts"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">
            <include layout="@layout/item_emergency_contact"/>
            <include layout="@layout/item_emergency_contact"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
