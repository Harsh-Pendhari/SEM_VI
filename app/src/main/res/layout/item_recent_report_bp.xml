<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <!-- Sleep Icon -->
        <ImageView
            android:id="@+id/ivSleepIcon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/bp_rh"
            android:contentDescription="Sleep Report"/>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Title + Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Blood Pressure"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111"/>

<!--                <TextView-->
<!--                    android:id="@+id/tvDate"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="April 11, 2024"-->
<!--                    android:textSize="12sp"-->
<!--                    android:textColor="#777777"/>-->
            </LinearLayout>

            <!-- Sleep Info -->
            <TextView
                android:id="@+id/tvSleepInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6CA651"
                android:layout_marginTop="4dp"/>

            <!-- Updated Time -->
<!--            <TextView-->
<!--                android:id="@+id/tvUpdated"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Updated 13 days ago"-->
<!--                android:textSize="12sp"-->
<!--                android:textColor="#888888"-->
<!--                android:layout_marginTop="2dp"/>-->
        </LinearLayout>

        <!-- Arrow -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Open"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
