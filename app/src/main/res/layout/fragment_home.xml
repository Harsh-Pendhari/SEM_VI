<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/primary_bg">

            <!-- Title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Heart icon -->
                <ImageView
                    android:id="@+id/ivHeartIcon"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/ic_heart"
                    android:layout_marginEnd="8dp" />

                <!-- My Health gradient text -->
                <ImageView
                    android:id="@+id/ivMyHealthText"
                    android:layout_width="190dp"
                    android:layout_height="36dp"
                    android:src="@drawable/myhealthtext"
                    android:contentDescription="My Health" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Notification -->
                <ImageView
                    android:id="@+id/ivNotification"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_bell"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"

                    android:layout_marginEnd="10dp" />

                <!-- SOS -->
                <ImageView
                    android:id="@+id/ivSOS"
                    android:layout_width="36dp"
                    android:layout_height="36dp"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"

                    android:src="@drawable/ic_sos" />
            </LinearLayout>

            <!-- Profile row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="54dp"
                    android:layout_height="54dp"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"

                    android:src="@drawable/ic_male" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, Shrutika!"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111111" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32 yrs"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- CARD LIST -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/cardMyMedicines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <include layout="@layout/item_mymedicines_card" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cardHealthReportInsights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <include layout="@layout/item_healthreportinsights_card" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cardHealthTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <include layout="@layout/item_healthtipsandarticles_card" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cardHealthRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <include layout="@layout/item_healthrecord_tracker" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cardDoctorsAppointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <include layout="@layout/item_doctorsappointments_card" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cardReportHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <include layout="@layout/item_reporthistory_card" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
