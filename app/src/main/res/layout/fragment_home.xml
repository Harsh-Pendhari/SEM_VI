<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/primary_bg">

            <!-- Title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Heart icon -->
                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/ic_heart"
                    android:layout_marginEnd="8dp" />

                <!-- My Health gradient text -->
                <ImageView
                    android:layout_width="225dp"
                    android:layout_height="36dp"
                    android:src="@drawable/myhealthtext"
                    android:contentDescription="My Health" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Notification -->
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_bell"
                    android:layout_marginEnd="10dp" />

                <!-- SOS -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_sos" />
            </LinearLayout>

            <!-- Profile row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_male" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, Shrutika!"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111111" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32 yrs"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- CARD LIST -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <include layout="@layout/item_mymedicines_card" />
            <include layout="@layout/item_healthreportinsights_card" />
            <include layout="@layout/item_mymedicines_card" />
            <include layout="@layout/item_mymedicines_card" />
            <include layout="@layout/item_mymedicines_card" />
            <include layout="@layout/item_mymedicines_card" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
